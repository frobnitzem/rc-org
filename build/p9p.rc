#!/usr/bin/env rc

~ $#* 0 || PLAN9=$*(1)

grep -q 9fans\.github\.io $PLAN9/README.md || {
    echo 'script argument or $PLAN9 should point at plan9port'
    exit 1
}

path = ($PLAN9/bin $path)

SYSNAME=`{uname}
INSTALL=`{ [ $SYSNAME = AIX ] && echo installbsd || echo install }

cd $PLAN9/src
sh -x ../mkmk.sh

cd cmd/rc
mk

$INSTALL o.rc $PLAN9/bin/rc
